<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ezra_greendark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/announcement_layout"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newMatchViewLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/newMatchView"
                android:text="@string/newMatch_label"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/Ezra_greendark"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/newMatchView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:background="@color/grey"
                android:hint="Latest Match" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventListLayout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventViewLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/eventView"
                android:text="@string/eventList_label"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/Ezra_greendark"
                android:textSize="23sp"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/eventScrollView"
            android:layout_width="350dp"
            android:layout_height="371dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

    <!--        <LinearLayout-->
    <!--            android:id="@+id/eventScrollView_layout"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:orientation="vertical">-->

                <TextView
                    android:id="@+id/eventListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@color/grey"
                    android:hint="Event List"/>
    <!--        </LinearLayout>-->
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/EditProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"/>

            <Button
                android:id="@+id/groupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group"/>

            <Button
                android:id="@+id/messageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"/>


        </LinearLayout>
        <Button
            android:id="@+id/eventTabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event"/>

        <Button
            android:id="@+id/openChatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Chat"/>

    </LinearLayout>

    <!--    <android.support.design.widget.BottomNavigationView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="300dp"-->
<!--        android:layout_marginTop="500dp"/>-->
</RelativeLayout>